<div class="position-relative">
    <!-- Swiper Main Slider -->
    <div class="js-swiper-shop-classic-hero swiper bg-light">
        <img src="~/Assets/img/client/PvhNuXTVmggjHlzhi2FP5a8qaEcOW0bwoUQFxEx0.jpg" alt="Alternate Text"
             class="position-absolute top-0 start-0 end-0 w-100 h-100" style="z-index: 0; opacity: 0.12;"/>
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <!-- Container -->
                <div class="container content-space-t-2 content-space-b-3">
                    <div class="row align-items-lg-center">
                        <div class="col-lg-5 order-lg-2 mb-7 mb-lg-0">
                            <div class="mb-6" style="z-index: 200; position: relative;">
                                <h1 class="display-4 mb-4">Bản quyền Minecraft PC</h1>
                                <p class="text-black">
                                    Bảo đảm bảo hành vĩnh viễn bản quyền Minecraft của bạn.
                                </p>
                                <p class="text-black">
                                    Chơi mạng cùng bạn bè
                                </p>
                                <p class="text-black">
                                    Cài cape Optifine & các loại cosmetic khác
                                </p>
                                <p class="text-black">
                                    Chơi game trực tiếp trong phiên bản Minecraft Launcher chính hãng
                                </p>
                                <p class="text-black">
                                    Shop hỗ trợ tư vấn qua Zalo / SDT trực tiếp 24/7
                                </p>
                                <p class="text-black">
                                    Hỗ trợ cài game qua Ultraviewer
                                </p>
                            </div>
                        </div>
                        <!-- End Col -->

                        <div class="col-lg-6 order-lg-1">
                            <div class="w-75 mx-auto">
                                <img class="img-fluid" style="width: 400px; object-fit: fill;" src=@Url.Content(slide.slider_img) alt="Image Description">
                            </div>
                        </div>
                        <!-- End Col -->
                    </div>
                    <!-- End Row -->
                </div>
                <!-- End Container -->
            </div>
        </div>

        <!-- Arrows -->
        <div class="js-swiper-shop-classic-hero-button-next swiper-button-next"></div>
        <div class="js-swiper-shop-classic-hero-button-prev swiper-button-prev"></div>
    </div>
    <!-- End Swiper Main Slider -->
    <!-- Swiper Thumbs Slider -->
    <div class="position-absolute bottom-0 start-0 end-0 mb-3">
        <div class="js-swiper-shop-hero-thumbs swiper" style="max-width: 13rem;">
            <div class="swiper-wrapper">
                @foreach (var slide in Model)
                {
                    <!-- Slide -->
                    <div class="swiper-slide">
                        <a class="js-swiper-thumb-progress swiper-thumb-progress-avatar" href="javascript:;" tabindex="0">
                            <img class="swiper-thumb-progress-avatar-img w-100" src=@Url.Content(slide.slider_img) alt="Image Description">
                        </a>
                    </div>
                    <!-- End Slide -->
                }
            </div>
        </div>
    </div>
    <!-- End Swiper Thumbs Slider -->
</div>