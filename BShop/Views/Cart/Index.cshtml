@using BShop.Utils
@model BShop.Models.Entity.Cart

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.CartItems != null && Model.CartItems.Count > 0)
{
    <!-- Content -->
    <div class="container">
    <div class="row ">
    <div class="col-lg-8 mb-7 mb-lg-0">
        <!-- Heading -->
        <div class="d-flex justify-content-between align-items-end border-bottom pb-3 mb-7">
            <h1 class="h3 mb-0">Giỏ hàng</h1>
            <span>@Model.CartItems.Count sản phẩm</span>
        </div>
        <!-- End Heading -->

        <!-- Form -->
        <form>
            <!-- List Group -->
            <ul class="list-group list-group-flush list-group-no-gutters mb-5">
                @foreach (var ci in Model.CartItems)
                {
                    <!-- Item -->
                    <li class="list-group-item">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <img class="avatar avatar-xl avatar-4x3" style="height: 120px; width: 120px;"
                                     src=@Url.Content(ci.Product.ProductImage) alt="Image Description">
                            </div>

                            <div class="flex-grow-1 ms-3">
                                <div class="row">
                                    <div class="col-sm-7 mb-3 mb-sm-0">
                                        <h5>
                                            <a class="text-dark" href="#">@ci.Product.ProductName</a>
                                        </h5>

                                        <div class="d-block d-sm-none">
                                            <h5 class="mb-1">@($"{ci.Product.Discount:n0}")đ</h5>
                                        </div>

                                        <div class="d-grid gap-1">
                                            <div class="text-body">
                                                <span class="small">Giá gốc:</span>
                                                <span class="fw-semi-bold small text-danger">
                                                    <del>@($"{ci.Product.Price:n0}")đ</del>
                                                </span>
                                            </div>

                                            <div class="text-body d-none">
                                                <span class="small">Color:</span>
                                                <span class="fw-semi-bold small">Grey</span>
                                            </div>

                                            <div class="text-body d-none">
                                                <span class="small">Size:</span>
                                                <span class="fw-semi-bold small">One size</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Col -->

                                    <div class="col-sm-3">
                                        <div class="row">
                                            <div class="quantity-counter mb-3 border-0 d-none">
                                                <div class="js-quantity-counter row align-items-center">

                                                    <div class="col">
                                                        <input class="js-result form-control form-control-quantity-counter" type="text" value="1" readonly="readonly">
                                                    </div>
                                                    <!-- End Col -->

                                                    <div class="col-auto">
                                                        <a class="js-minus btn btn-outline-secondary btn-xs btn-icon rounded-circle" href="@($"/Cart/Update?cid={Model.CartId}&pid={ci.ProductId}&quantity=-1")">
                                                            <svg width="8" height="2" viewBox="0 0 8 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                                <path d="M0 1C0 0.723858 0.223858 0.5 0.5 0.5H7.5C7.77614 0.5 8 0.723858 8 1C8 1.27614 7.77614 1.5 7.5 1.5H0.5C0.223858 1.5 0 1.27614 0 1Z" fill="currentColor"/>
                                                            </svg>
                                                        </a>
                                                        <a class="js-plus btn btn-outline-secondary btn-xs btn-icon rounded-circle" href="@($"/Cart/Update?cid={Model.CartId}&pid={ci.ProductId}&quantity=1")">
                                                            <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                                <path d="M4 0C4.27614 0 4.5 0.223858 4.5 0.5V3.5H7.5C7.77614 3.5 8 3.72386 8 4C8 4.27614 7.77614 4.5 7.5 4.5H4.5V7.5C4.5 7.77614 4.27614 8 4 8C3.72386 8 3.5 7.77614 3.5 7.5V4.5H0.5C0.223858 4.5 0 4.27614 0 4C0 3.72386 0.223858 3.5 0.5 3.5H3.5V0.5C3.5 0.223858 3.72386 0 4 0Z"
                                                                      fill="currentColor"/>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                    <!-- End Col -->

                                                </div>
                                                <!-- End Row -->
                                            </div>

                                            <div class="col-auto">
                                                <div class="d-grid gap-2">
                                                    <a class="link-sm link-secondary small" href="@($"/Cart/Remove?cid={Model.CartId}&pid={ci.ProductId}")">
                                                        <i class="bi-trash me-1"></i> Xóa
                                                    </a>

                                                    <a class="link-sm link-secondary small d-none" href="javascript:void(0)">
                                                        <i class="bi-heart me-1"></i> Save for later
                                                    </a>
                                                </div>
                                            </div>
                                            <!-- End Col -->
                                        </div>
                                        <!-- End Row -->
                                    </div>
                                    <!-- End Col -->

                                    <div class="col-4 col-sm-2 d-none d-sm-inline-block text-right">
                                        <span class="h5 d-block mb-1 text-success">@($"{ci.Product.Discount:n0}")đ</span>
                                    </div>
                                    <!-- End Col -->
                                </div>
                                <!-- End Row -->
                            </div>
                        </div>
                    </li>
                    <!-- End Item -->
                }
            </ul>
            <!-- End List Group -->

            <div class="d-sm-flex justify-content-start">
                <a class="link" href="/Product">
                    <i class="bi-chevron-left small ms-1"></i> Tiếp tục mua hàng
                </a>
            </div>
        </form>
        <!-- End Form -->
    </div>
    <!-- End Col -->

    <div class="col-lg-4">
        <div class="ps-lg-4">
            <!-- Card -->
            <div class="card card-sm shadow-sm mb-4">
                <div class="card-body">
                    <div class="border-bottom pb-4 mb-4">
                        <h3 class="card-header-title">Đơn hàng</h3>
                    </div>

                    <form>
                        <div class="border-bottom pb-4 mb-3 d-none">
                            <input type="text" class="form-control" name="name" placeholder="Enter promo code" aria-label="Enter promo code">
                        </div>

                        <div class="border-bottom pb-4 mb-4">
                            <div class="d-grid gap-3">
                                <dl class="row">
                                    <dt class="col-sm-6">Số lượng (@Model.CartItems.Count)</dt>
                                    <dd class="col-sm-6 text-sm-end mb-0">@($"{Model.TotalPrice:n0}")đ</dd>
                                </dl>
                                <!-- End Row -->

                                <dl class="row d-none">
                                    <dt class="col-sm-6">Delivery</dt>
                                    <dd class="col-sm-6 text-sm-end mb-0">Free</dd>
                                </dl>
                                <!-- End Row -->
                            </div>
                        </div>

                        <div class="border-bottom pb-4 mb-4 d-none">
                            <div class="d-grid gap-3">
                                <!-- Check -->
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="deliveryRadioName" id="deliveryRadio1" checked>
                                    <label class="form-check-label text-dark" for="deliveryRadio1">
                                        Miễn phí giao hàng
                                        <span class="d-block text-muted small">
                                            Tài khoản sẽ giao trong 5p
                                        </span>
                                    </label>
                                </div>
                                <!-- End Check -->

                                <!-- Check -->
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="deliveryRadioName" id="deliveryRadio2">
                                    <label class="form-check-label text-dark" for="deliveryRadio2">
                                        Miễn phí giao hàng
                                        <span class="d-block text-muted small">Tài khoản sẽ giao trong 5p</span>
                                    </label>
                                </div>
                                <!-- End Check -->
                            </div>
                        </div>

                        <div class="d-grid gap-3 mb-4">
                            <dl class="row">
                                <dt class="col-sm-6">Thuế</dt>
                                <dd class="col-sm-6 text-sm-end mb-0">0 đ</dd>
                            </dl>
                            <!-- End Row -->

                            <dl class="row">
                                <dt class="col-sm-6">Thành tiền</dt>
                                <dd class="col-sm-6 text-sm-end mb-0">@($"{Model.TotalPrice:n0}")đ</dd>
                            </dl>
                            <!-- End Row -->
                        </div>

                        <div class="d-grid">
                            <a class="btn btn-primary btn-lg" href="/Checkout">Tiến hành thanh toán</a>
                        </div>
                    </form>
                </div>
                <!-- End Card -->
            </div>

            <!-- Media -->
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="svg-icon svg-icon-sm text-primary">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M22.1671 18.1421C22.4827 18.4577 23.0222 18.2331 23.0206 17.7868L23.0039 13.1053V5.52632C23.0039 4.13107 21.8729 3 20.4776 3H8.68815C7.2929 3 6.16183 4.13107 6.16183 5.52632V9H13C14.6568 9 16 10.3431 16 12V15.6316H19.6565L22.1671 18.1421Z" fill="#035A4B"/>
                            <path opacity="0.3" fill-rule="evenodd" clip-rule="evenodd" d="M1.98508 18V13C1.98508 11.8954 2.88051 11 3.98508 11H11.9851C13.0896 11 13.9851 11.8954 13.9851 13V18C13.9851 19.1046 13.0896 20 11.9851 20H4.10081L2.85695 21.1905C2.53895 21.4949 2.01123 21.2695 2.01123 20.8293V18.3243C1.99402 18.2187 1.98508 18.1104 1.98508 18ZM5.99999 14.5C5.99999 14.2239 6.22385 14 6.49999 14H11.5C11.7761 14 12 14.2239 12 14.5C12 14.7761 11.7761 15 11.5 15H6.49999C6.22385 15 5.99999 14.7761 5.99999 14.5ZM9.49999 16C9.22385 16 8.99999 16.2239 8.99999 16.5C8.99999 16.7761 9.22385 17 9.49999 17H11.5C11.7761 17 12 16.7761 12 16.5C12 16.2239 11.7761 16 11.5 16H9.49999Z" fill="#035A4B"/>
                        </svg>
                    </div>
                </div>
                <div class="flex-grow-1 ms-2">
                    <span class="small me-1">Hỗ trợ</span>
                    <a class="link small d-none" href="#">Chat now</a>
                </div>
            </div>
            <!-- End Media -->
        </div>
    </div>
    <!-- End Col -->
    </div>
    <!-- End Row -->
    </div>
    <!-- End Content -->
}
else
{
    <div class="container content-space-2 content-space-lg-3">
        <div class="w-md-75 w-lg-50 text-center mx-md-auto">
            <div class="mb-5">
                <img class="img-fluid" src="~/Assets/svg/illustrations/oc-empty-cart.svg" alt="Image Description" style="width: 15rem;">
            </div>

            <div class="mb-5">
                <h1 class="h2">
                    Giỏ hàng trống
                </h1>
                <p>
                    Bắt đầu mua sắm ngay hôm nay và tìm thấy những sản phẩm yêu thích của bạn.
                </p>
            </div>

            <a class="btn btn-primary btn-transition rounded-pill px-6" href="/Product">Bắt đầu mua sắm</a>
        </div>
    </div>
}


@section js {
    <script>
        (function() {
            // INITIALIZATION OF  QUANTITY COUNTER
            // =======================================================
            new HSQuantityCounter('.js-quantity-counter')
        })();
    </script>
    @if (TempData[Constant.StatusRs] != null)
    {
        <script>
            showAlert('@Html.Raw(TempData[Constant.MessageRs])', '@TempData[Constant.StatusRs]');
        </script>
    }
}