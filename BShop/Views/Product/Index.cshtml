@using BShop.Utils
@model BShop.Models.ViewModel.ProductViewModel

@{
    ViewBag.Title = "HP Shop - Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light">
    <div class="container py-4">
        <div class="row">
            <div class="col-sm">
                <h4 class="mb-0">Danh sách sản phẩm</h4>
            </div>
            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>
</div>

<!-- Card Grid -->
<div class="container content-space-t-1 content-space-b-2 content-space-b-lg-3">
    <div class="row">
        <div class="col-lg-3">
            <!-- Navbar -->
            <div class="navbar-expand-lg mb-5">
                <!-- Navbar Toggle -->
                <div class="d-grid">
                    <button type="button" class="navbar-toggler btn btn-white mb-3"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarVerticalNavMenu" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navbarVerticalNavMenu">
                        <span class="d-flex justify-content-between align-items-center">
                            <span class="text-dark">Lọc</span>

                            <span class="navbar-toggler-default">
                                <i class="bi-list"></i>
                            </span>

                            <span class="navbar-toggler-toggled">
                                <i class="bi-x"></i>
                            </span>
                        </span>
                    </button>
                </div>
                <!-- End Navbar Toggle -->

                <!-- Navbar Collapse -->
                <div id="navbarVerticalNavMenu" class="collapse navbar-collapse">
                    <div class="w-100">
                        <!-- Form -->
                        <form>
                            <div class="border-bottom pb-2 mb-2">
                                <h5 class="mb-5">Giá</h5>
                                <div class="d-grid gap-2 mt-4">
                                    <div class="range-slider">
                                        <div class="js-nouislider" id="range-price" data-hs-nouislider-options='{
                                              "range": {
                                                "min": 1,
                                                "max": 50000000
                                              },
                                              "start": [@Model.minPrice, @Model.maxPrice],
                                              "showTooltips": true
                                           }'>
                                        </div>
                                        <div class="d-flex justify-content-between mt-3">
                                            <small>1</small>
                                            <p>
                                                <small>@($"{"50000000":n0}")đ</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <input type="number" id="input-min" value="@($"{Model.minPrice}")" class="form-text m-0" name="start" style="width: 100px" min="0"/>
                                        <span>-</span>
                                        <input type="number" id="input-max" value="@($"{Model.maxPrice}")" class="form-text m-0" name="end" style="width: 100px" min="0"/>
                                    </div>
                                    <div>
                                        <button type="button" class="btn btn-primary btn-sm w-100" onclick="filter()">Lọc</button>
                                    </div>
                                </div>
                            </div>


                            <div class="border-bottom pb-2 mb-2">
                                <h5>Loại sản phẩm</h5>

                                <div class="d-grid gap-2">
                                    @foreach (var cate in Model.listCateView.Take(5))
                                    {
                                        <!-- Checkboxes -->
                                        <div class="form-check" onclick="goToPage('@($"/Product?page={Model.currentPage}&cate={cate.categoryId}")')">
                                            <input class="form-check-input" type="radio" value="@cate.categoryId"
                                                   name="cate"
                                                   id="cate-@cate.categoryId"
                                                   @(cate.categoryId == Model.currentCategory ? "checked" : "")>
                                            <label class="form-check-label d-flex" for="cate-@cate.categoryId">
                                                @cate.categoryName <span class="ms-auto">(@cate.totalProduct)</span>
                                            </label>
                                        </div>
                                        <!-- End Checkboxes -->
                                    }
                                </div>

                                <!-- View More - Collapse -->
                                <div class="collapse" id="collapseCategory">
                                    <div class="d-grid gap-2">
                                        @foreach (var cate in Model.listCateView.Skip(5))
                                        {
                                            <!-- Checkboxes -->
                                            <div class="form-check" onclick="goToPage('@($"/Product?page={Model.currentPage}&cate={cate.categoryId}")')">
                                                <input class="form-check-input" type="radio" value="@cate.categoryId" name="cate" id="cate-@cate.categoryId">
                                                <label class="form-check-label d-flex" for="cate-@cate.categoryId">
                                                    @cate.categoryName <span class="ms-auto">(@cate.totalProduct)</span>
                                                </label>
                                            </div>
                                            <!-- End Checkboxes -->
                                        }
                                    </div>
                                </div>
                                <!-- End View More - Collapse -->

                                <!-- Link -->
                                <a class="link-sm link-collapse" href="#collapseCategory" role="button" data-bs-toggle="collapse" aria-expanded="false" aria-controls="collapseCategory">
                                    <span class="link-collapse-default">Xem thêm</span>
                                    <span class="link-collapse-active">Rút gọn</span>
                                </a>
                                <!-- End Link -->
                            </div>
                        </form>
                        <!-- End Form -->
                    </div>
                </div>
                <!-- End Navbar Collapse -->
            </div>
            <!-- End Navbar -->
        </div>
        <!-- End Col -->

        <div class="col-lg-9">
            <div class="row align-items-center mb-5">
                <div class="col-sm mb-3 mb-sm-0 ps-10">
                    <h6 class="mb-0">@Model.totalProduct sản phẩm</h6>
                </div>

                <div class="col-sm-auto">
                    <div class="d-sm-flex justify-content-sm-end align-items-center">
                        <!-- Select -->
                        <div class="mb-2 mb-sm-0 me-sm-2">
                            <select class="form-select form-select-sm" onchange="sort(this)">
                                <option value="ACS" @("ASC".Equals(Model.sort) ? "selected" : "")>A-to-Z</option>
                                <option value="DESC" @("DESC".Equals(Model.sort) ? "selected" : "")>Z-to-A</option>
                                <option value="pASC" @("pASC".Equals(Model.sort) ? "selected" : "")>Giá thấp tới cao</option>
                                <option value="pDESC" @("pDESC".Equals(Model.sort) ? "selected" : "")>Giá cao tới thấp</option>
                            </select>
                        </div>
                        <!-- End Select -->

                        <!-- Nav -->
                        <ul class="nav nav-segment d-none">
                            <li class="nav-item">
                                <a class="nav-link active" href="javascript:void(0)">
                                    <i class="bi-grid-fill"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="javascript:void(0)">
                                    <i class="bi-list"></i>
                                </a>
                            </li>
                        </ul>
                        <!-- End Nav -->
                    </div>
                </div>
            </div>
            <!-- End Row -->

            <div class="row row-cols-sm-2 row-cols-md-3 mb-10">
                @if (Model.listProduct.Count == 0)
                {
                    <div class="alert alert-secondary w-100 text-center" role="alert">
                        Không tìm thấy sản phẩm
                    </div>
                }
                @foreach (var card in Model.listProduct)
                {
                    <div class="col mb-4">
                        <!-- Card -->
                        <div class="card card-bordered shadow-none text-center h-100">
                            <div class="card-pinned">
                                <img class="card-img-top" src=@Url.Content(card.ProductImage) alt="HP Shop" style="height: 250px;"/>

                                <div class="card-pinned-top-start">
                                    @if (card.CreatedAt.HasValue && card.CreatedAt.Value.AddDays(15) >= DateTime.Now)
                                    {
                                        <span class="badge bg-success rounded-pill">Mới</span>
                                    }
                                </div>

                                <div class="card-pinned-top-end">
                                    <button type="button" class="btn btn-outline-secondary btn-xs btn-icon rounded-circle" data-bs-toggle="tooltip" data-bs-placement="top" title="Save for later">
                                        <i class="bi-heart"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="mb-2">
                                    <a class="link-sm link-secondary" href="javascript:void(0)">@card.Category.CategoryName</a>
                                </div>

                                <h4 class="card-title">
                                    <a class="text-dark" href="/Product/Detail/@card.ProductId">@card.ProductName</a>
                                </h4>
                                <p class="card-text text-dark">
                                    <del class="text-danger">@("Giá gốc: " + $"{card.Price:n0}")đ</del> <br/>
                                    <span class="text-success fw-bold">@("Giá: " + $"{card.Discount:n0}") đ</span>
                                </p>
                            </div>

                            <div class="card-footer pt-0">
                                <a href="/Cart/Add/@card.ProductId" type="button" class="btn btn-outline-primary btn-sm rounded-pill">Thêm vào giỏ hàng</a>
                            </div>
                        </div>
                        <!-- End Card -->
                    </div>
                    <!-- End Col -->
                }
            </div>
            <!-- End Row -->

            @if (Model.listProduct.Count > 0)
            {
                <!-- Pagination -->
                @Model.paging
                <!-- End Pagination -->
            }
        </div>
        <!-- End Col -->
    </div>
    <!-- End Row -->
</div>
<!-- End Card Grid -->

<!-- Subscribe -->
@Html.Partial("Subscribe")
<!-- End Subscribe -->

@Html.Partial("Client")

@section js {
    @if (TempData[Constant.StatusRs] != null)
    {
        <script>
            showAlert('@Html.Raw(TempData[Constant.MessageRs])', '@TempData[Constant.StatusRs]');
        </script>
    }
    <script src="~/Scripts/client/product.js"> </script>
}