@using BShop.Utils
@model BShop.Models.Entity.Category

@{
    ViewBag.Title = "Thêm loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var pageTitleModel = new List<string>() { "Loại sản phẩm", "Thêm loại sản phẩm" };
}

<!-- start page title -->
@Html.Partial("_PageTitle", pageTitleModel)
<!-- end page title -->

@using (Html.BeginForm("DoAdd", "CategoryMana", FormMethod.Post))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- end card-body -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="mb-3">
                                <label class="form-label">Tên</label>
                                @Html.TextBoxFor(item => item.CategoryName, new { @class = "form-control", @placeholder = "Nhập tên loại" })
                            </div>
                        </div> <!-- end col-->
                    </div>
                    <button class="btn btn-sm btn-primary">Thêm</button>
                    <!-- end row -->
                </div>
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row-->
}

@section js {
    @if (TempData[Constant.StatusRs] != null)
    {
        <script>
            showToast('@Html.Raw(TempData[Constant.MessageRs])', '@TempData[Constant.StatusRs]');
        </script>
    }
}